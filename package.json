{
  "name": "shopify-mcp-complete",
  "version": "1.0.0",
  "description": "Comprehensive MCP Server for Shopify GraphQL Admin API - 40 tools for products, orders, customers, inventory, analytics, and more",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "shopify-mcp-complete": "dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tools": {
      "import": "./dist/tools/index.js",
      "types": "./dist/tools/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "shopify",
    "mcp",
    "model-context-protocol",
    "graphql",
    "ai",
    "llm",
    "claude",
    "e-commerce",
    "admin-api",
    "inventory",
    "analytics"
  ],
  "author": "Hisham Al Hadi",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "dotenv": "^16.4.5",
    "graphql": "^16.9.0",
    "graphql-request": "^6.1.0",
    "minimist": "^1.2.8",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.10.5",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
